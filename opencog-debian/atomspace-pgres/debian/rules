#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@ --buildsystem=cmake

override_dh_auto_configure:
	dh_auto_configure -- \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr

override_dh_auto_test:
	# Skip tests during package build
	# Tests require running PostgreSQL server
	@echo "Skipping tests (require PostgreSQL server)"

override_dh_strip:
	dh_strip --dbgsym-migration='opencog-atomspace-pgres-dbg (<< 1.0.0-1~)'
