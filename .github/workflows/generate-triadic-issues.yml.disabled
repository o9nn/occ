      - name: Create Project Board (Projects v2)
        uses: actions/github-script@v7
        with:
        script: |
          // Create a new Projects v2 board using GraphQL
          const repoId = (await github.graphql(`
            query($owner: String!, $repo: String!) {
              repository(owner: $owner, name: $repo) { id }
            }
          `, { owner: context.repo.owner, repo: context.repo.repo })).repository.id;
          
          const project = await github.graphql(`
            mutation($repoId: ID!) {
              createProjectV2(input: {
                ownerId: $repoId
                title: "Triadic Architecture Implementation"
              }) {
                projectV2 { id, title, url }
              }
            }
          `, { repoId });

          console.log('Created Projects v2 board:', project.createProjectV2.projectV2.url);
          console.log('Project ID:', project.createProjectV2.projectV2.id);
          console.log('Note: Projects v2 uses custom fields and views instead of columns. Configure these in the web interface if needed.');