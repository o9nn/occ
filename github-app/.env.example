# OCC GitHub App Environment Configuration
# Copy this file to .env and fill in your values

# GitHub App Configuration
GITHUB_APP_ID=your-app-id-here
GITHUB_PRIVATE_KEY_PATH=/app/private-key.pem
GITHUB_WEBHOOK_SECRET=your-webhook-secret-here
GITHUB_INSTALLATION_ID=your-installation-id-here

# Application Configuration
APP_ENV=production
APP_HOST=0.0.0.0
APP_PORT=8080
LOG_LEVEL=INFO

# Database Configuration (Optional)
# DATABASE_URL=postgresql://user:password@localhost:5432/occ_app

# Redis Configuration (Optional)
# REDIS_URL=redis://localhost:6379/0
